{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Documents": {
    "MongoUrl": "mongodb://admin:123456##@mongo01.codewrecks.com/AiDocuments?authSource=admin",
    "ElasticUrl": "http://localhost:9200",
    "Tika": "C:\\Nosql\\Tika\\tika.jar",
    "Javabin": "C:\\Program Files\\Amazon Corretto\\jdk18.0.2_9\\bin\\java.exe",
    "PythonTokenizerFlaskUrl": "http://127.0.0.1:5001",
    "DocumentSegmentsIndexName" : "DocumentSegments"
  },
  "ChatConfig": {
    "DataDir": "C:\\temp\\ChatDb",
    "TemplateDir": "c:\\temp\\ChatDB\\templates"
  },
  "AzureOpenAiConfiguration": {
    "Default": "gpt4",
    "Endpoints": [
      {
        "Name": "gpt4",
        "url": "openai/deployments/Gpt4/chat/completions?api-version=2023-03-15-preview",
        "baseAddress": "https://alkopenai2.openai.azure.com/"
      },
      {
        "Name": "gpt35",
        "url": "openai/deployments/Gpt35/chat/completions?api-version=2023-03-15-preview",
        "baseAddress": "https://alkopenai2.openai.azure.com/"
      }
    ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {

      "Http": {
        "Url": "http://localhost:5200"

      }
    }
  },
  //Serilog configuration https://github.com/serilog/serilog-settings-configuration
  "Serilog": {

    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} ] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/errors.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "AiLibrary"
    }
  }
}
